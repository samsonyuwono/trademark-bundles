<section class="section section-{{ section.id }}">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="section__title h3">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    <div class="testimonials grid grid--large grid--center">
      {%- for block in section.blocks -%}
        <div class="testimonials__grid-item {% if block.settings.author_picture != blank %}testimonials__grid-item--spaced{% endif %} grid__cell 1/3--handheld-and-up" {{ block.shopify_attributes }}>
          <div class="testimonial {% if block.settings.author_picture != blank %}testimonial--has-image{% endif %}">
            {%- if block.settings.author_picture -%}
              <img src="{{ block.settings.author_picture | img_url: '160x160', crop: 'center' }}" alt="{{ block.settings.author_picture.alt | escape }}" class="testimonial__picture">
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <p class="testimonial__author">{{ block.settings.title | escape }}</p>
            {%- endif -%}

            <div class="testimonial__content">
              {{ block.settings.quote }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "class": "shopify-section__testimonials",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Testimonials"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "author_picture",
          "label": "Author picture",
          "info": "180 x 180px .jpg recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Author name",
          "default": "Author name"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Quote",
          "default": "<p>Share what your customers are saying about your products, your company...</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Testimonials",
      "settings": {},
      "blocks": [
        {
          "type": "testimonial",
          "settings": {}
        },
        {
          "type": "testimonial",
          "settings": {}
        },
        {
          "type": "testimonial",
          "settings": {}
        }
      ]
    }
  ]
}
{% endschema %}